{
	"compilerOptions": {
		"downlevelIteration": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2019"
	},
	"exclude": [
		"node_modules",
	],
	"include": [
		"src",
	]
}